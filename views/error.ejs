<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Error <%= err.statusCode || 500 %>
                </h4>
                <p>
                    <%= err.message %>
                </p>
                <% if(process.env.NODE_ENV !=="production" ) { %>
                    <% if (err.stack) { %>
                        <hr>
                        <pre><%= err.stack %></pre>
                        <% } %>
                            <% } %>
            </div>
            <a href="/" class="btn btn-outline-danger mt-3">Back to Home</a>
        </div>
    </div>